import React, { useState, useEffect, useMemo } from 'react';
import { initializeApp } from 'firebase/app';
import { 
  getFirestore, 
  collection, 
  doc, 
  setDoc, 
  getDoc,
  deleteDoc,
  onSnapshot,
} from 'firebase/firestore';
import { 
  getAuth, 
  signInAnonymously, 
  onAuthStateChanged,
} from 'firebase/auth';
import { 
  Building2, 
  ChevronLeft, 
  ChevronRight, 
  Trash2,
  MonitorOff,
  UserCircle,
  LayoutDashboard,
  CheckCircle2,
  Clock,
  Users
} from 'lucide-react';

// --- Firebase 配置 ---
const firebaseConfig = {
  apiKey: "AIzaSyA0nKyCYK6iAVCTpg3qW2Vkqfao8AQspj8",
  authDomain: "meeting-room-system-1a3e9.firebaseapp.com",
  projectId: "meeting-room-system-1a3e9",
  storageBucket: "meeting-room-system-1a3e9.firebasestorage.app",
  messagingSenderId: "887021351294",
  appId: "1:887021351294:web:54ea8c257f32a2dd34432f",
  measurementId: "G-9T4XVLVZ0Q"
};

const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = 'meeting-room-system-v-final';

// --- 會議室清單 ---
const ROOMS = [
  { id: '301', name: '301 (貴賓室)', hasPC: false },
  { id: '302', name: '302', hasPC: true },
  { id: '303', name: '303 (無電腦)', hasPC: false },
  { id: '304', name: '304', hasPC: true },
  { id: '305', name: '305', hasPC: true },
  { id: '306', name: '306', hasPC: true },
  { id: '401', name: '401', hasPC: true },
  { id: '402', name: '402', hasPC: true },
  { id: '403', name: '403 (教育訓練室)', hasPC: false },
];

const TIME_SLOTS = [];
for (let i = 8; i < 18; i++) {
  TIME_SLOTS.push(`${i.toString().padStart(2, '0')}:00`);
  TIME_SLOTS.push(`${i.toString().padStart(2, '0')}:30`);
}

const formatDate = (date) => {
  if (!date) return "";
  const d = (date instanceof Date) ? date : new Date(date);
  return d.toISOString().split('T')[0];
};

const getMonday = (d) => {
  const date = new Date(d);
  const day = date.getDay();
  const diff = date.getDate() - day + (day === 0 ? -6 : 1);
  return new Date(date.setDate(diff));
};

// 使用 export default App 以符合環境規範，避免重複掛載錯誤
export default function App() {
  const [user, setUser] = useState(null);
  const [userProfile, setUserProfile] = useState({ name: '', department: '' });
  const [view, setView] = useState('user'); 
  const [selectedRoom, setSelectedRoom] = useState(ROOMS[0]);
  const [baseDate, setBaseDate] = useState(getMonday(new Date()));
  const [bookings, setBookings] = useState([]);
  const [isProfileModalOpen, setIsProfileModalOpen] = useState(false);
  const [isBookingModalOpen, setIsBookingModalOpen] = useState(false);
  const [activeSlot, setActiveSlot] = useState(null);

  useEffect(() => {
    signInAnonymously(auth).catch(console.error);
    const unsubscribe = onAuthStateChanged(auth, setUser);
    return () => unsubscribe();
  }, []);

  useEffect(() => {
    if (!user) return;
    const profileRef = doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info');
    getDoc(profileRef).then(snap => {
      if (snap.exists()) setUserProfile(snap.data());
      else setIsProfileModalOpen(true);
    });
    const bookingsRef = collection(db, 'artifacts', appId, 'public', 'data', 'bookings');
    const unsubscribe = onSnapshot(bookingsRef, (snapshot) => {
      setBookings(snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() })));
    }, (error) => {
      console.error("Firestore 監聽失敗:", error);
    });
    return () => unsubscribe();
  }, [user]);

  const weekDays = useMemo(() => {
    return [0, 1, 2, 3, 4].map(i => {
      const d = new Date(baseDate);
      d.setDate(baseDate.getDate() + i);
      return { date: formatDate(d), label: ['週一', '週二', '週三', '週四', '週五'][i] };
    });
  }, [baseDate]);

  const bookingsMap = useMemo(() => {
    const map = {};
    bookings.forEach(b => map[`${b.date}_${b.timeSlot}_${b.roomId}`] = b);
    return map;
  }, [bookings]);

  const handleBooking = async () => {
    if (!user || !activeSlot || !userProfile.name) return;
    const id = `${selectedRoom.id}_${activeSlot.date}_${activeSlot.time.replace(':','')}`;
    try {
      await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'bookings', id), {
        ...activeSlot,
        roomId: selectedRoom.id,
        roomName: selectedRoom.name,
        name: userProfile.name,
        department: userProfile.department,
        userId: user.uid,
        createdAt: new Date().toISOString()
      });
      setIsBookingModalOpen(false);
    } catch (error) {
      console.error("預約失敗:", error);
    }
  };

  const deleteBooking = async (id) => {
    if (window.confirm('確定取消預約嗎？')) {
      try {
        await deleteDoc(doc(db, 'artifacts', appId, 'public', 'data', 'bookings', id));
      } catch (error) {
        console.error("刪除失敗:", error);
      }
    }
  };

  return (
    <div className="min-h-screen bg-slate-50 font-sans flex flex-col text-slate-900">
      <header className="bg-white border-b px-6 py-4 flex justify-between items-center sticky top-0 z-20 shadow-sm">
        <div className="flex items-center gap-2">
          <Building2 className="text-indigo-600" />
          <h1 className="font-bold">會議室預約系統</h1>
        </div>
        <button onClick={() => setView(view === 'user' ? 'admin' : 'user')} className="text-xs bg-slate-100 px-3 py-1.5 rounded-lg font-bold">
          {view === 'admin' ? '管理者：返回' : '管理員入口'}
        </button>
      </header>

      <main className="p-4 md:p-6 grid grid-cols-1 md:grid-cols-4 gap-6 max-w-7xl mx-auto w-full flex-1">
        <div className="space-y-2">
          <p className="text-[10px] font-black text-slate-400 uppercase tracking-widest px-2 mb-1">會議室選擇</p>
          {ROOMS.map(room => (
            <button
              key={room.id}
              onClick={() => setSelectedRoom(room)}
              className={`w-full text-left p-4 rounded-xl border transition-all ${
                selectedRoom.id === room.id ? 'bg-indigo-600 border-indigo-600 text-white shadow-lg' : 'bg-white border-slate-200 hover:border-indigo-200'
              }`}
            >
              <div className="font-bold text-sm">{room.name}</div>
            </button>
          ))}
        </div>

        <div className="md:col-span-3 bg-white rounded-3xl border border-slate-200 p-4 shadow-sm overflow-x-auto">
          <div className="flex justify-between items-center mb-6 px-2">
            <h2 className="text-xl font-black">{selectedRoom.name}</h2>
            <div className="flex items-center gap-3 bg-slate-50 p-1 rounded-xl border">
              <button onClick={() => {const d=new Date(baseDate); d.setDate(d.getDate()-7); setBaseDate(d);}} className="p-2 hover:bg-white hover:shadow-sm rounded-lg transition-all"><ChevronLeft size={18}/></button>
              <span className="text-[11px] font-black px-2 uppercase">{weekDays[0].date} 當週</span>
              <button onClick={() => {const d=new Date(baseDate); d.setDate(d.getDate()+7); setBaseDate(d);}} className="p-2 hover:bg-white hover:shadow-sm rounded-lg transition-all"><ChevronRight size={18}/></button>
            </div>
          </div>
          <table className="w-full text-xs text-center border-collapse">
            <thead>
              <tr className="bg-slate-50 border-b">
                <th className="p-3 text-slate-400 w-20">時段</th>
                {weekDays.map(d => <th key={d.date} className="p-3 border-l border-slate-100">{d.label}<br/>{d.date}</th>)}
              </tr>
            </thead>
            <tbody>
              {TIME_SLOTS.map(time => (
                <tr key={time} className="border-b border-slate-50">
                  <td className="p-2 text-slate-400 border-r border-slate-50">{time}</td>
                  {weekDays.map(day => {
                    const b = bookingsMap[`${day.date}_${time}_${selectedRoom.id}`];
                    return (
                      <td key={day.date} className="p-1 h-14 border-r border-slate-50">
                        {b ? (
                          <div className={`h-full w-full rounded-lg p-1.5 flex flex-col justify-center relative shadow-sm ${
                            b.userId === user?.uid ? 'bg-indigo-600 text-white' : 'bg-slate-100 text-slate-500'
                          }`}>
                            <span className="font-bold truncate text-[10px] leading-tight">{b.name}</span>
                            {(b.userId === user?.uid || view === 'admin') && (
                              <button onClick={() => deleteBooking(b.id)} className="absolute top-1 right-1 hover:text-rose-400"><Trash2 size={10}/></button>
                            )}
                          </div>
                        ) : (
                          <button onClick={() => {setActiveSlot({date: day.date, time}); setIsBookingModalOpen(true);}} className="w-full h-full border border-dashed border-slate-200 rounded-lg hover:bg-slate-50 text-slate-200">+</button>
                        )}
                      </td>
                    );
                  })}
                </tr>
              ))}
            </tbody>
          </table>
        </div>
      </main>

      {isProfileModalOpen && (
        <div className="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 z-50">
          <div className="bg-white p-8 rounded-3xl w-full max-w-sm shadow-2xl">
            <h3 className="text-xl font-bold mb-4 text-center">設定個人資料</h3>
            <form onSubmit={async (e) => {
              e.preventDefault();
              await setDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info'), userProfile);
              setIsProfileModalOpen(false);
            }} className="space-y-4">
              <input required placeholder="您的姓名" className="w-full border border-slate-200 p-4 rounded-xl outline-none focus:ring-2 focus:ring-indigo-500 font-bold" value={userProfile.name} onChange={e => setUserProfile({...userProfile, name: e.target.value})} />
              <input required placeholder="所屬部門" className="w-full border border-slate-200 p-4 rounded-xl outline-none focus:ring-2 focus:ring-indigo-500 font-bold" value={userProfile.department} onChange={e => setUserProfile({...userProfile, department: e.target.value})} />
              <button className="w-full bg-indigo-600 text-white p-4 rounded-xl font-bold shadow-lg">儲存並進入系統</button>
            </form>
          </div>
        </div>
      )}

      {isBookingModalOpen && (
        <div className="fixed inset-0 bg-black/60 backdrop-blur-sm flex items-center justify-center p-4 z-50">
          <div className="bg-white p-8 rounded-3xl w-full max-w-xs shadow-2xl text-center">
            <h3 className="font-bold text-lg mb-2 text-slate-800">確認預約</h3>
            <div className="bg-slate-50 p-5 rounded-2xl mb-6 text-sm border border-slate-100">
              <p className="font-bold text-indigo-600 text-lg">{selectedRoom.name}</p>
              <p className="text-slate-500 mt-1">{activeSlot?.date} {activeSlot?.time}</p>
            </div>
            <button onClick={handleBooking} className="w-full bg-indigo-600 text-white p-4 rounded-xl font-bold mb-3 shadow-lg">確認送出</button>
            <button onClick={() => setIsBookingModalOpen(false)} className="text-slate-400 text-sm font-bold">取消</button>
          </div>
        </div>
      )}
    </div>
  );
}