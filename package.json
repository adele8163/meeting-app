import React, { useState, useEffect, useMemo } from 'react';
import { createRoot } from 'react-dom/client';
import { initializeApp } from 'firebase/app';
import { 
  getFirestore, 
  collection, 
  doc, 
  setDoc, 
  getDoc,
  deleteDoc,
  onSnapshot,
} from 'firebase/firestore';
import { 
  getAuth, 
  signInAnonymously, 
  onAuthStateChanged
} from 'firebase/auth';
import { 
  Building2, 
  ChevronLeft, 
  ChevronRight, 
  Trash2,
  MonitorOff,
  UserCircle,
  LayoutDashboard,
  CheckCircle2
} from 'lucide-react';

// --- Firebase 配置 ---
const firebaseConfig = {
  apiKey: "AIzaSyA0nKyCYK6iAVCTpg3qW2Vkqfao8AQspj8",
  authDomain: "meeting-room-system-1a3e9.firebaseapp.com",
  projectId: "meeting-room-system-1a3e9",
  storageBucket: "meeting-room-system-1a3e9.firebasestorage.app",
  messagingSenderId: "887021351294",
  appId: "1:887021351294:web:54ea8c257f32a2dd34432f",
  measurementId: "G-9T4XVLVZ0Q"
};

const app = initializeApp(firebaseConfig);
const auth = getAuth(app);
const db = getFirestore(app);
const appId = 'meeting-room-system-vfinal';

// --- 會議室資料 ---
const ROOMS = [
  { id: '301', name: '301 (貴賓室)', hasPC: false },
  { id: '302', name: '302', hasPC: true },
  { id: '303', name: '303 (無電腦)', hasPC: false },
  { id: '304', name: '304', hasPC: true },
  { id: '305', name: '305', hasPC: true },
  { id: '306', name: '306', hasPC: true },
  { id: '401', name: '401', hasPC: true },
  { id: '402', name: '402', hasPC: true },
  { id: '403', name: '403 (教育訓練室)', hasPC: false },
];

const TIME_SLOTS = [];
for (let i = 8; i < 18; i++) {
  TIME_SLOTS.push(`${i.toString().padStart(2, '0')}:00`);
  TIME_SLOTS.push(`${i.toString().padStart(2, '0')}:30`);
}

function MeetingApp() {
  const [user, setUser] = useState(null);
  const [userProfile, setUserProfile] = useState({ name: '', department: '' });
  const [view, setView] = useState('user'); 
  const [selectedRoom, setSelectedRoom] = useState(ROOMS[0]);
  const [baseDate, setBaseDate] = useState(new Date());
  const [bookings, setBookings] = useState([]);
  const [isProfileModalOpen, setIsProfileModalOpen] = useState(false);
  const [isBookingModalOpen, setIsBookingModalOpen] = useState(false);
  const [activeSlot, setActiveSlot] = useState(null);

  useEffect(() => {
    signInAnonymously(auth).catch(console.error);
    const unsubscribe = onAuthStateChanged(auth, setUser);
    return () => unsubscribe();
  }, []);

  useEffect(() => {
    if (!user) return;
    const profileRef = doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info');
    getDoc(profileRef).then(snap => {
      if (snap.exists()) setUserProfile(snap.data());
      else setIsProfileModalOpen(true);
    });

    const bookingsRef = collection(db, 'artifacts', appId, 'public', 'data', 'bookings');
    const unsubscribe = onSnapshot(bookingsRef, (snapshot) => {
      setBookings(snapshot.docs.map(doc => ({ id: doc.id, ...doc.data() })));
    });
    return () => unsubscribe();
  }, [user]);

  const weekDays = useMemo(() => {
    const start = new Date(baseDate);
    const day = start.getDay();
    const diff = start.getDate() - day + (day === 0 ? -6 : 1);
    const monday = new Date(start.setDate(diff));
    return [0, 1, 2, 3, 4].map(i => {
      const d = new Date(monday);
      d.setDate(monday.getDate() + i);
      return { 
        date: d.toISOString().split('T')[0], 
        label: ['週一', '週二', '週三', '週四', '週五'][i] 
      };
    });
  }, [baseDate]);

  const bookingsMap = useMemo(() => {
    const map = {};
    bookings.forEach(b => map[`${b.date}_${b.timeSlot}_${b.roomId}`] = b);
    return map;
  }, [bookings]);

  const handleBooking = async () => {
    if (!user || !activeSlot || !userProfile.name) return;
    const id = `${selectedRoom.id}_${activeSlot.date}_${activeSlot.time.replace(':','')}`;
    await setDoc(doc(db, 'artifacts', appId, 'public', 'data', 'bookings', id), {
      ...activeSlot,
      roomId: selectedRoom.id,
      roomName: selectedRoom.name,
      name: userProfile.name,
      department: userProfile.department,
      userId: user.uid,
      createdAt: new Date().toISOString()
    });
    setIsBookingModalOpen(false);
  };

  return (
    <div className="min-h-screen bg-slate-50 font-sans flex flex-col">
      <header className="bg-white border-b border-slate-200 px-6 py-4 flex justify-between items-center sticky top-0 z-20 shadow-sm">
        <div className="flex items-center gap-2">
          <Building2 className="text-indigo-600" />
          <h1 className="font-bold text-slate-800 text-lg">企業會議室預約系統</h1>
        </div>
        <div className="flex items-center gap-4">
          <button 
            onClick={() => setView(view === 'user' ? 'admin' : 'user')} 
            className="text-xs bg-slate-100 hover:bg-slate-200 px-4 py-2 rounded-xl font-bold transition-colors"
          >
            {view === 'admin' ? '返回使用者模式' : '切換管理模式'}
          </button>
        </div>
      </header>

      <main className="p-4 md:p-6 grid grid-cols-1 md:grid-cols-4 gap-6 max-w-7xl mx-auto w-full">
        <div className="md:col-span-1 space-y-2">
          <p className="text-[10px] font-black text-slate-400 uppercase tracking-widest px-2 mb-2">選擇會議室</p>
          {ROOMS.map(room => (
            <button
              key={room.id}
              onClick={() => setSelectedRoom(room)}
              className={`w-full text-left p-4 rounded-2xl border transition-all ${
                selectedRoom.id === room.id 
                ? 'bg-indigo-600 border-indigo-600 text-white shadow-lg' 
                : 'bg-white border-slate-200 hover:border-indigo-300'
              }`}
            >
              <div className="font-bold">{room.name}</div>
              {!room.hasPC && <div className={`text-[10px] ${selectedRoom.id === room.id ? 'text-indigo-200' : 'text-slate-400'}`}>無電腦</div>}
            </button>
          ))}
        </div>

        <div className="md:col-span-3 bg-white rounded-3xl border border-slate-200 p-4 md:p-6 shadow-sm overflow-hidden flex flex-col">
          <div className="flex justify-between items-center mb-6">
            <h2 className="text-2xl font-black text-slate-800">{selectedRoom.name}</h2>
            <div className="flex items-center gap-3 bg-slate-50 p-1 rounded-xl border">
              <button onClick={() => {const d=new Date(baseDate); d.setDate(d.getDate()-7); setBaseDate(d);}} className="p-2 hover:bg-white hover:shadow-sm rounded-lg transition-all"><ChevronLeft size={20}/></button>
              <span className="text-sm font-bold px-2">{weekDays[0].date} 當週</span>
              <button onClick={() => {const d=new Date(baseDate); d.setDate(d.getDate()+7); setBaseDate(d);}} className="p-2 hover:bg-white hover:shadow-sm rounded-lg transition-all"><ChevronRight size={20}/></button>
            </div>
          </div>

          <div className="overflow-x-auto">
            <table className="w-full text-xs text-center border-collapse">
              <thead>
                <tr className="bg-slate-50 border-b border-slate-100">
                  <th className="p-3 font-bold text-slate-400 w-20">時段</th>
                  {weekDays.map(d => (
                    <th key={d.date} className="p-3 border-l border-slate-100">
                      <div className="font-black text-slate-700">{d.label}</div>
                      <div className="text-[10px] text-slate-400">{d.date}</div>
                    </th>
                  ))}
                </tr>
              </thead>
              <tbody>
                {TIME_SLOTS.map(time => (
                  <tr key={time} className="border-b border-slate-50 hover:bg-slate-50/50">
                    <td className="p-2 text-slate-400 border-r border-slate-50 font-medium">{time}</td>
                    {weekDays.map(day => {
                      const b = bookingsMap[`${day.date}_${time}_${selectedRoom.id}`];
                      return (
                        <td key={day.date} className="p-1 h-14 border-r border-slate-50">
                          {b ? (
                            <div className={`h-full w-full rounded-xl p-2 flex flex-col justify-center relative transition-all ${
                              b.userId === user?.uid ? 'bg-indigo-100 text-indigo-700' : 'bg-slate-100 text-slate-500'
                            }`}>
                              <span className="font-bold truncate leading-tight">{b.name}</span>
                              <span className="text-[9px] opacity-70 truncate">{b.department}</span>
                              {(b.userId === user?.uid || view === 'admin') && (
                                <button 
                                  onClick={async () => { if(confirm('確定要取消預約嗎？')) await deleteDoc(doc(db,'artifacts',appId,'public','data','bookings',b.id)) }} 
                                  className="absolute top-1 right-1 hover:text-rose-500 transition-colors"
                                >
                                  <Trash2 size={12}/>
                                </button>
                              )}
                            </div>
                          ) : (
                            <button 
                              onClick={() => {setActiveSlot({date: day.date, time}); setIsBookingModalOpen(true);}} 
                              className="w-full h-full border border-dashed border-slate-200 rounded-xl hover:bg-indigo-50 hover:border-indigo-300 text-slate-200 transition-all font-bold"
                            >
                              +
                            </button>
                          )}
                        </td>
                      );
                    })}
                  </tr>
                ))}
              </tbody>
            </table>
          </div>
        </div>
      </main>

      {isProfileModalOpen && (
        <div className="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
          <div className="bg-white p-8 rounded-[2rem] w-full max-w-sm shadow-2xl">
            <h3 className="text-2xl font-black text-slate-800 text-center mb-6">歡迎使用預約系統</h3>
            <form onSubmit={async (e) => {
              e.preventDefault();
              await setDoc(doc(db, 'artifacts', appId, 'users', user.uid, 'profile', 'info'), userProfile);
              setIsProfileModalOpen(false);
            }} className="space-y-4">
              <input required placeholder="您的真實姓名" className="w-full border border-slate-200 p-4 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 font-bold" value={userProfile.name} onChange={e => setUserProfile({...userProfile, name: e.target.value})} />
              <input required placeholder="所屬部門" className="w-full border border-slate-200 p-4 rounded-2xl outline-none focus:ring-2 focus:ring-indigo-500 font-bold" value={userProfile.department} onChange={e => setUserProfile({...userProfile, department: e.target.value})} />
              <button className="w-full bg-indigo-600 text-white p-4 rounded-2xl font-black shadow-lg">進入系統</button>
            </form>
          </div>
        </div>
      )}

      {isBookingModalOpen && (
        <div className="fixed inset-0 bg-slate-900/60 backdrop-blur-sm z-50 flex items-center justify-center p-4">
          <div className="bg-white p-8 rounded-[2rem] w-full max-w-xs shadow-2xl text-center">
            <h3 className="font-black text-xl text-slate-800 mb-2">確認預約</h3>
            <p className="text-sm text-slate-500 mb-6">{activeSlot?.date} {activeSlot?.time}<br/>{selectedRoom.name}</p>
            <button onClick={handleBooking} className="w-full bg-indigo-600 text-white p-4 rounded-2xl font-black shadow-lg">確認送出</button>
            <button onClick={() => setIsBookingModalOpen(false)} className="w-full mt-4 text-slate-400 font-bold text-sm">取消</button>
          </div>
        </div>
      )}
    </div>
  );
}

// 嚴謹渲染邏輯
const rootElement = document.getElementById('root');
if (rootElement) {
  createRoot(rootElement).render(<MeetingApp />);
}